extends ../layouts/main.pug

block content 
    main
        if orders.length > 0
            ul 
                each order in orders
                    li
                        h1 Order: #{order._id} - 
                            a(href=`${config.routes.ORDERS}/${order._id}`) Invoice
                            ul 
                                each product in order.products
                                    li #{product.product.title}(#{product.quantity})
        else 
            h1 No Orders 