extends ../layouts/main.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content 
    main
        form.product-form(action=`${config.pages.editProduct.route}` method="post")    
            div.form-control   
                label(for="title") Title
                input(type="text", name="title", value=`${product.title}` required)#title
            div.form-control   
                label(for="imageUrl") Image URL
                input(type="text", name="imageUrl", value=`${product.imageUrl}` required)#imageUrl    
            div.form-control   
                label(for="price") Price
                input(type="number", name="price", value=`${product.price}` required)#price  
            div.form-control   
                label(for="description") Description 
                textarea#description(name="description", rows="10") #{product.description}
            input(type="hidden", name="id", value=`${product.id}`)             
            button.btn(type="submit") Save