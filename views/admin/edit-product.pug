extends ../layouts/main.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content 
    main
        include ../includes/error-message.pug
        form.product-form(action=`${config.pages.editProduct.route}` method="post" novalidate)
            input(type="hidden", name="_csrf" value=`${scrfToken}`)     
            div.form-control   
                label(for="title") Title
                input(
                    type="text", 
                    name="title", 
                    value=`${product.title}`,
                    class=`${errors.find(e => e.param === 'title') ? 'invalid' : ''}`
                )#title
            div.form-control   
                label(for="imageUrl") Image URL
                input(
                    type="text", 
                    name="imageUrl", 
                    value=`${product.imageUrl}`,
                    class=`${errors.find(e => e.param === 'imageUrl') ? 'invalid' : ''}`
                )#imageUrl    
            div.form-control   
                label(for="price") Price
                input(
                    type="number", 
                    name="price", 
                    value=`${product.price}`,
                    class=`${errors.find(e => e.param === 'price') ? 'invalid' : ''}`
                )#price  
            div.form-control   
                label(for="description") Description 
                textarea#description(
                    name="description", 
                    rows="10",
                    class=`${errors.find(e => e.param === 'description') ? 'invalid' : ''}`
                ) #{product.description}
            input(type="hidden", name="id", value=`${product._id}`)             
            button.btn(type="submit") Save