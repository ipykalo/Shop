extends ../layouts/main.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")
block content 
    main
        include ../includes/error-message.pug
        form.login-form(action=`${config.pages.resetPassword.route}` method="POST")  
            input(type="hidden", name="_csrf" value=`${scrfToken}`)  
            div.form-control   
                label(for="email") Email
                input(
                    type="email",
                    name="email",
                    required,
                    class=`${errors.find(e => e.param === 'email') ? 'invalid' : null}`,
                )#email              
            button.btn(type="submit") Reset   