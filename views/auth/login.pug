extends ../layouts/main.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")
block content 
    main
        form.login-form(action=`${config.pages.login.route}` method="post")  
            input(type="hidden", name="_csrf" value=`${scrfToken}`)  
            div.form-control   
                label(for="email") Email
                input(type="email", name="email" required)#email
            div.form-control   
                label(for="password") Password
                input(type="password", name="password", required)#password                
            button.btn(type="submit") Login
            div.resest-pass 
                a(href=`${config.pages.resetPassword.route}`) Reset Pasword
        if errorMsg.length
            include ../includes/error-message.pug    