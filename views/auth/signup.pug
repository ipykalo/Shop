extends ../layouts/main.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")
block content 
    main
        form.login-form(action=`${config.pages.signup.route}` method="POST" novalidate) 
            input(type="hidden", name="_csrf" value=`${scrfToken}`)    
            div.form-control   
                label(for="email") Email
                input(type="email", name="email" required)#email
            div.form-control   
                label(for="password") Password
                input(type="password", name="password", required)#password  
            div.form-control   
                label(for="confirmPassword") Confirm Password
                input(type="password", name="confirmPassword", required)#confirmPassword                    
            button.btn(type="submit") Signup
        if errorMsg.length
            include ../includes/error-message.pug
                