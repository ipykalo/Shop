extends ../layouts/main.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")
block content 
    main
        include ../includes/error-message.pug
        form.login-form(action=`${config.pages.signup.route}` method="POST" novalidate) 
            input(type="hidden", name="_csrf" value=`${scrfToken}`)    
            div.form-control   
                label(for="email") Email
                input(
                    required, 
                    type="email", 
                    name="email"
                    value=`${oldInput.email}` 
                    class=`${errors.find(e => e.param === 'email') ? 'invalid' : null}`
                )#email
            div.form-control   
                label(for="password") Password
                input(
                    type="password", 
                    name="password",
                    value=`${oldInput.password}`,
                    required,
                    class=`${errors.find(e => e.param === 'password') ? 'invalid' : null}`
                )#password  
            div.form-control   
                label(for="confirmPassword") Confirm Password
                input(
                    type="password", 
                    name="confirmPassword", 
                    value=`${oldInput.confirmPassword}`,
                    required,
                    class=`${errors.find(e => e.param === 'confirmPassword') ? 'invalid' : null}`
                )#confirmPassword                
            button.btn(type="submit") Signup
                