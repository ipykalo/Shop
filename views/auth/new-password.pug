extends ../layouts/main.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")
block content 
    main
        form.login-form(action=`${config.pages.newPassword.route}` method="POST") 
            input(type="hidden", name="_csrf" value=`${scrfToken}`)
            input(type="hidden", name="userId" value=`${userId}`)  
            input(type="hidden", name="resetPassToken" value=`${resetPassToken}`)   
            div.form-control   
                label(for="password") Password
                input(type="password", name="password", required)#password                     
            button.btn(type="submit") Send
        if errorMsg.length
            include ../includes/error-message.pug
                