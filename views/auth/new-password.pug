extends ../layouts/main.pug

block styles
    link(rel="stylesheet", href="/public/css/forms.css")
    link(rel="stylesheet", href="/public/css/auth.css")
block content 
    main
        include ../includes/error-message.pug
        form.login-form(action=`${config.pages.newPassword.route}` method="POST") 
            input(type="hidden", name="_csrf" value=`${scrfToken}`)
            input(type="hidden", name="userId" value=`${userId}`)  
            input(type="hidden", name="resetPassToken" value=`${resetPassToken}`)   
            div.form-control   
                label(for="password") Password
                input(
                    type="password",
                    name="password",
                    required,
                    class=`${errors.find(e => e.param === 'password') ? 'invalid' : null}`,
                )#password                     
            button.btn(type="submit") Send
                